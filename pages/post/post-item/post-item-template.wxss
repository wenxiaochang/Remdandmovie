.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed; 
  border-top: 1px solid #ededed;
  padding-bottom: 5px; 
}
.post-author-bar{
 margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-data{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-weight: 600;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 400rpx;
  margin-left: 16px;
  margin: 0 auto;
  margin-bottom: 15rpx;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width: 16px;
  height: 16px;
  margin-left:8rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}
.post-like-text{
  vertical-align: middle;
}